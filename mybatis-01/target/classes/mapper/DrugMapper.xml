<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yi.mapper.DrugMapper">

    <insert id="insertDrug" parameterType="Drug">
        insert into mis.drug (drugid,name,pinyin,unit,specification,price,quantity)
        values (#{drugid},#{name},#{pinyin},#{unit},#{specification},#{price},#{quantity});
    </insert>

    <delete id="deleteDrugById" parameterType="int">
        delete from mis.drug where drugid = #{drugid};
    </delete>

    <update id="updateDrug" parameterType="Drug">
        update mis.drug
        set name = #{name},pinyin = #{pinyin},unit = #{unit},specification = #{specification},price = #{price},quantity = #{quantity}
        where drugid = #{drugid};
    </update>

    <select id="quertDrugById" resultType="Drug">
        select * from mis.drug where drugid = #{drugid};
    </select>

    <select id="queryAllDrug" resultType="Drug">
        select * from mis.drug;
    </select>

</mapper>